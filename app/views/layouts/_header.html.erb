<header id="header" class="header fixed-top">  

    <div class="container">       
        <h1 class="logo">
            <a href="/"><%= image_tag("logo_header.png") %></a>
        </h1><!--//logo-->
        <nav class="main-nav navbar navbar-expand-md navbar-dark" role="navigation">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar-collapse" aria-controls="navbars-collapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div id="navbar-collapse" class="navbar-collapse collapse justify-content-end">
                <ul class="nav navbar-nav">
                    <li class="nav-item"><a class="nav-link" href="/map">Maps</a></li>
                    <li class="nav-item"><a class="nav-link" href="/trips">Mes Trips</a></li>
                    <li class="nav-item dropdown">
                        <!-- Apparition Modal -->
                        <a class="nav-link dropdown-toggle " data-toggle="modal"  data-hover="dropdown" data-delay="0" data-target="#myModal" data-close-others="false" data-toggle="modal" data-target="#myModal" >Connexion<i class="fa fa-angle-down"></i></a>
                        
                        <!-- Modal -->
                        <div class="modal fade" id="myModal" role="dialog">
                            <div class="modal-dialog">

                                <!-- Modal content-->
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                        <h4 class="modal-title">Modal Header</h4>
                                    </div>
                                    <div class="modal-body">
                                      <p>Some text in the modal.</p>
                                  </div>
                                  <div class="modal-footer">
                                      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                  </div>
            <div class="container">       
                <h1 class="logo">
                    <a href="#"><%= image_tag("logo_header.png") %></a>
                </h1><!--//logo-->
                <nav class="main-nav navbar navbar-expand-md navbar-dark" role="navigation">
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar-collapse" aria-controls="navbars-collapse" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div id="navbar-collapse" class="navbar-collapse collapse justify-content-end">
                        <ul class="nav navbar-nav">
                            <li class="nav-item"><a class="nav-link" href="/map">Maps</a></li>
                            <li class="nav-item"><a class="nav-link" href="/trips">Mes Trips</a></li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-delay="0" data-close-others="false">Connexion <i class="fa fa-angle-down"></i></a>
                                <div class="dropdown-menu dropdown-menu-right">
                                    <% if user_signed_in? %>
											<%= current_user.email %> 
										<a class="dropdown-item" href="/users/edit">Modifier</a>
											<%= link_to "Se déconnecter", destroy_user_session_path, method: :delete, class: "dropdown-item"%>
									<% else %>
										<a class="dropdown-item" href="/users/sign_up">S'inscrire</a><br/>
										<a class="dropdown-item" href="/users/sign_in">Se connecter</a>
									<% end %><!--//user connexion-->
                                </div>
                            </div>
                        </div>
                      <!-- Trigger the modal with a button -->
                      <div class="dropdown-menu dropdown-menu-right">
                        <% if user_signed_in? %>
                        <%= current_user.name %> 
                        <a class="dropdown-item" href="/users/edit">Modifier</a>
                        <a rel="nofollow" data-method="DELETE" href="/users/sign_out">Déconnexion</a>
                        <% else %>
                        <a class="dropdown-item" href="/users/sign_up">S'inscrire</a><br/>
                        <a class="dropdown-item" href="/users/sign_in">Se connecter</a>
                        <% end %><!--//user connexion-->           
                    </div>
                </li><!--//dropdown--> 
            </ul><!--//nav-->
        </div><!--//navabr-collapse-->
    </nav><!--//main-nav-->
</div><!--//container-->
</header><!--//header-->  


