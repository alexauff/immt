<!-- ******Map****** -->
<section class="promo section">

    <p class="intro text-center" style="color: pink;">
        Personnalisez votre trajet avec la carte interactive
    </p>

    <!-- MAP SWITCHER -->
    <div class="container text-center">
        <div id="filters" class="button-group clearfix boutons-menu-maps">
            <button class="btn button" data-filter=".mestrips">Voir mes lieux</button>
            <button class="btn button" data-filter=".musees">Enregistrer mon trajet</button>
        </div>
    </div>

</section>


<!-- partie carte -->
<div class="box-carte-page-maps container item col-xl-12 col-md-12 col-12">
    <div class="item-inner">
        <div class="liste-page-maps col-xl-3 col-md-3 col-12">
            <div class="header-box">
                <span class="fs1" aria-hidden="true" data-icon="&#xe104;"></span>
            </div>

            <div class="desc text-center">
                <h4>A Paris, je souhaite visiter :</h4>
                <hr>
            </div>
            <div id="name-save">
                <ul class="sub-title">

                </ul>
            </div>
        </div>

        <div id="map-wrapper" class="col-xl-9 col-md-9 col-12">

            <div>
                <input id="pac-input" class="controls" type="text" placeholder="Enter a location">
            </div>

            <div id="map"></div>

        </div>

        <a href="/map" class="scrollToTop">Scroll To Top</a>


        <div id="result">

        </div>

        <!--//item-inner-->
    </div>
    <!--//item-->
</div>

<!--------- Suggestions -------------->
<section id="work-list" class="section work-list title-result-page-maps">
    <div class="container text-center">
        <h3 class="title">Résultats de lieux pour #{lieu}</h3>
        <div id="filters" class="button-group clearfix">
            <button class="btn button is-checked" id="changetype-all">Tous</button>
            <button class="btn button" id="changetype-restaurant">Restos</button>
            <button class="btn button" id="changetype-bar">Bars</button>
            <button class="btn button" id="changetype-museum">Musées</button>
            <button class="btn button" id="changetype-bank">Banque</button>
        </div>

        <div id="search-result"></div>

    </div>
    <!--//container-fluid-->
</section>
